<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddVideoActivity"
    android:layout_margin="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Input the x part of \nhttps://www.youtube.com/watch?v=xxxxxxxxxxx" />

    <EditText
        android:id="@+id/input_youtube_video_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="input your youtube video's id" />

    <Button
        android:id="@+id/submit_video_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:textAllCaps="false"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

</LinearLayout>